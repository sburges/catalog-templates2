{
    "name": "redis",
    "version": "3.0",
    "vendor": "Redis",
    "volumes": [
        {
            "name": "data-volume",
            "size_gb": 1,
            "filesystem": "ext4",
            "shared": false
        }
    ],
    "components": [
        {
            "name": "redis-server",
            "version": "3.0",
            "vendor": "Redis",
            "external_name": "redis-server",
            "image": "redis:3.0",
            "min_RAM_mb": 512,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": ["ALL"],
            "affinity": [],
            "labels": ["redis"],
            "min_instances": 1,
            "max_instances": 1,
            "retry_count": 5,
            "service_ports": [
                {
                    "name": "redis",
                    "protocol": "TCP",
                    "source_port": 6379,
                    "target_port": 6379,
                    "public": true
                }
            ],
            "volume_mounts": [
                {
                    "volume_name": "data-volume",
                    "mountpoint": "/data"
                }
            ]
        }
    ]
}
