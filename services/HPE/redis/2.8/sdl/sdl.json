{
    "name": "redis",
    "version": "2.8",
    "vendor": "HPE",
    "volumes": [
        {
            "name": "data-volume",
            "size_gb": 1,
            "filesystem": "ext4",
            "shared": false
        }
    ],
    "components": [
        {
            "name": "redis-server",
            "version": "2.8",
            "vendor": "Redis",
            "external_name": "redis-server",
            "image": "redis:2.8",
            "min_RAM_mb": 512,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": [],
            "affinity": [],
            "labels": [
                "redis"
            ],
            "min_instances": 1,
            "max_instances": 1,
            "retry_count": 5,
            "service_ports": [
                {
                    "name": "redis",
                    "protocol": "TCP",
                    "source_port": 6379,
                    "target_port": 6379,
                    "public": true
                }
            ],
            "volume_mounts": [
                {
                    "volume_name": "data-volume",
                    "mountpoint": "/data"
                }
            ]
        },
        {
            "name": "csm-side-car",
            "version": "1.0",
            "vendor": "HPE",
            "external_name": "redis-csm-side-car",
            "image": "docker-registry.helion.space:443/service-catalog/catalog-service-manager:latest",
            "min_RAM_mb": 512,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": [],
            "affinity": [],
            "labels": [
                "redis-csm"
            ],
            "min_instances": 1,
            "max_instances": 1,
            "retry_count": 5,
            "service_ports": [
                {
                    "name": "csm-api",
                    "protocol": "TCP",
                    "source_port": 8081,
                    "target_port": 8081,
                    "public": true
                }
            ],
            "parameters": [
                {
                    "name": "CSM_API_KEY"
                },
                {
                    "name": "CSM_PARAMETERS"
                }
            ]
        }
    ],
    "parameters": [
        {
            "name": "CSM_PARAMETERS",
            "description": "Parameters for the csm side-car to use application endpoint",
            "example": "API_KEY",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "CSM_API_KEY",
            "description": "CSM side-car api key",
            "default": "csm-auth-token",
            "example": "csm-auth-token",
            "data_type": "string",
            "required": true,
            "secret": false
        }
    ]
}
