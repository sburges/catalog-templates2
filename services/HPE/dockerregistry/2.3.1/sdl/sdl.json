{
    "name": "dockerregistry",
    "version": "2.3.1",
    "vendor": "HPE",
    "components": [
        {
            "name": "registry",
            "version": "2.3.1",
            "vendor": "Docker",
            "external_name": "registry",
            "image": "registry:2.3.1",
            "min_RAM_mb": 256,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": [],
            "labels": [
                "Registry"
            ],
            "min_instances": 1,
            "max_instances": 1,
            "service_ports": [
                {
                    "name": "registry",
                    "protocol": "TCP",
                    "source_port": 5000,
                    "target_port": 5000,
                    "public": true
                }
            ]
        },
        {
            "name": "csm-side-car",
            "version": "1.0",
            "vendor": "HPE",
            "external_name": "registry-csm-side-car",
            "image": "docker-registry.helion.space:443/service-catalog/catalog-service-manager:latest",
            "min_RAM_mb": 512,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": [],
            "affinity": [],
            "labels": [
                "registry"
            ],
            "min_instances": 1,
            "max_instances": 1,
            "retry_count": 5,
            "service_ports": [
                {
                    "name": "csm-api",
                    "protocol": "TCP",
                    "source_port": 8081,
                    "target_port": 8081,
                    "public": true
                }
            ],
            "parameters": [
                {
                    "name": "CSM_API_KEY"
                },
                {
                    "name": "CSM_PARAMETERS"
                }
            ]
        }
    ],
    "parameters": [
        {
            "name": "CSM_PARAMETERS",
            "description": "Parameters for the csm side-car to use application endpoint",
            "example": "API_KEY",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "CSM_API_KEY",
            "description": "CSM side-car api key",
            "default": "csm-auth-token",
            "example": "csm-auth-token",
            "data_type": "string",
            "required": true,
            "secret": false
        }
    ]
}
