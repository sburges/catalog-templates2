{
  "name": "dev-mysql",
  "product_version": "5.6.0",
  "sdl_version": "5.6.0",
  "vendor": "HPE",
  "volumes": [{
 		"name": "dev-mysql-volume",
 		"size_gb": 1,
 		"filesystem": "ext4",
 		"shared": false
 	}],
  "components": [
    {
      "name": "mysql",
      "external_name": "mysql",
      "workload_type": "container",
      "version": "0.0.0",
      "vendor": "HPE",
      "image": "mysql/mysql-server:5.6",
      "min_RAM_mb": 512,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "affinity": [],
      "labels": ["mysql"],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "mysql",
          "protocol": "TCP",
          "source_port": 3306,
          "target_port": 3306,
          "public": false
        }
      ],
      "volume_mounts": [{
 			"volume_name": "dev-mysql-volume",
 			"mountpoint": "/var/lib/mysql"
 		}],
      "parameters": [
        {
          "name": "MYSQL_ROOT_PASSWORD"
        }
      ]
    },
    {
      "name": "csm-side-car",
      "external_name": "mysql-csm-side-car",
      "workload_type": "container",
      "version": "latest",
      "vendor": "HPE",
      "image": "docker-registry.helion.space:443/catalog-service-manager/csm-dev-mysql:latest",
      "min_RAM_mb": 50,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "affinity": [],
      "labels": ["mysql-csm"],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "mysql-csm",
          "protocol": "TCP",
          "source_port": 8081,
          "target_port": 8081,
          "public": true
        }
      ],
      "volume_mounts": [],
      "parameters": [
        {
          "name": "MYSQL_USER"
        },
        {
          "name": "MYSQL_PASS"
        },
        {
          "name": "CSM_API_KEY"
        }
      ]
    }
  ],
  "parameters": [
    {
      "name": "MYSQL_ROOT_PASSWORD",
      "description": "MySQL root password",
      "example": "changeme",
      "required": true,
      "secret": false,
      "generator":
        {
          "id": "MYSQL_ROOT_PASSWORD",
          "generate":
            {
              "type": "Password"
            }
        }
    },
    {
      "name": "MYSQL_USER",
      "description": "MySQL user used by the sidecar",
      "example": "root",
      "required": true,
      "secret": false,
      "default": "root"
    },
    {
      "name": "MYSQL_PASS",
      "description": "MySQL password used by the sidecar",
      "example": "changeme",
      "required": true,
      "secret": false,
      "generator":
        {
          "id": "MYSQL_PASS",
          "generate":
            {
              "type": "Password"
            }
        }
    },
    {
      "name": "CSM_API_KEY",
      "description": "API Key used to authenticate consumers of the sidecar API",
      "example": "my-secret-key",
      "required": true,
      "secret": false
    }
  ]
}
