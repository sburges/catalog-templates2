{
  "name": "rds-mysql",
  "product_version": "1.0.0",
  "sdl_version": "1.0.0",
  "vendor": "HPE",
  "volumes": [],
  "components": [
    {
      "name": "csm-side-car",
      "external_name": "mysql-csm-side-car",
      "workload_type": "container",
      "version": "latest",
      "vendor": "HPE",
      "image": "docker-registry.helion.space:443/catalog-service-manager/csm-dev-mysql:latest",
      "min_RAM_mb": 50,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "affinity": [],
      "labels": ["mysql-csm"],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "mysql-csm",
          "protocol": "TCP",
          "source_port": 8081,
          "target_port": 8081,
          "public": true
        }
      ],
      "volume_mounts": [],
      "parameters": [
        {
          "name": "MYSQL_HOST"
        },
        {
          "name": "MYSQL_PORT"
        },
        {
          "name": "MYSQL_USER"
        },
        {
          "name": "MYSQL_PASS"
        },
        {
          "name": "CSM_API_KEY"
        }
      ]
    }
  ],
  "parameters": [
    {
      "name": "MYSQL_HOST",
      "description": "RDS endpoint DNS name for MySQL database",
      "example": "mysql",
      "required": true,
      "secret": false
    },
    {
      "name": "MYSQL_PORT",
      "description": "RDS endpoint port for MySQL database",
      "example": "mysql",
      "required": true,
      "secret": false
    },
    {
      "name": "MYSQL_USER",
      "description": "MySQL user used by the sidecar",
      "example": "root",
      "required": true,
      "secret": false,
      "default": "root"
    },
    {
      "name": "MYSQL_PASS",
      "description": "MySQL password used by the sidecar",
      "example": "changeme",
      "required": true,
      "secret": false
    },
    {
      "name": "CSM_API_KEY",
      "description": "API Key used to authenticate consumers of the sidecar API",
      "example": "my-secret-key",
      "required": true,
      "secret": false
    }
  ]
}
