{
    "name": "cassandra",
    "version": "3.3",
    "vendor": "HPE",
    "volumes": [
        {
            "name": "data-volume",
            "size_gb": 1,
            "filesystem": "ext4",
            "shared": false
        }
    ],
    "components": [
        {
            "name": "cassandra",
            "version": "3.3",
            "vendor": "Apache",
            "external_name": "cassandra",
            "image": "cassandra:3.3",
            "min_RAM_mb": 256,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": [],
            "labels": [
                "cassandra"
            ],
            "min_instances": 1,
            "max_instances": 1,
            "retry_count": 5,
            "service_ports": [
                {
                    "name": "cql",
                    "protocol": "TCP",
                    "source_port": 9042,
                    "target_port": 9042,
                    "public": true
                },
                {
                    "name": "thrift",
                    "protocol": "TCP",
                    "source_port": 9160,
                    "target_port": 9160,
                    "public": true
                }
            ],
            "volume_mounts": [
                {
                    "volume_name": "data-volume",
                    "mountpoint": "/var/lib/cassandra"
                }
            ],
            "parameters": [
                {
                    "name": "MAX_HEAP_SIZE"
                },
                {
                    "name": "HEAP_NEWSIZE"
                }
            ]
        }
    ],
    "parameters": [
        {
            "name": "MAX_HEAP_SIZE",
            "description": "MAX_HEAP_SIZE",
            "default": "512M",
            "example": "512M",
            "required": true,
            "secret": false
        },
        {
            "name": "HEAP_NEWSIZE",
            "description": "HEAP_NEWSIZE",
            "default": "100M",
            "example": "100M",
            "required": true,
            "secret": false
        }
    ]
}
