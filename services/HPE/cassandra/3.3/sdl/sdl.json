{
    "name": "cassandra",
    "version": "3.3",
    "vendor": "HPE",
    "volumes": [
        {
            "name": "data-volume",
            "size_gb": 1,
            "filesystem": "ext4",
            "shared": false
        }
    ],
    "components": [
        {
            "name": "cassandra",
            "version": "3.3",
            "vendor": "Apache",
            "external_name": "cassandra",
            "image": "cassandra:3.3",
            "min_RAM_mb": 256,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": [],
            "labels": [
                "cassandra"
            ],
            "min_instances": 1,
            "max_instances": 1,
            "retry_count": 5,
            "service_ports": [
                {
                    "name": "cql",
                    "protocol": "TCP",
                    "source_port": 9042,
                    "target_port": 9042,
                    "public": true
                },
                {
                    "name": "thrift",
                    "protocol": "TCP",
                    "source_port": 9160,
                    "target_port": 9160,
                    "public": true
                }
            ],
            "volume_mounts": [
                {
                    "volume_name": "data-volume",
                    "mountpoint": "/var/lib/cassandra"
                }
            ],
            "parameters": [
                {
                    "name": "MAX_HEAP_SIZE"
                },
                {
                    "name": "HEAP_NEWSIZE"
                }
            ]
        },
        {
            "name": "csm-side-car",
            "version": "1.0",
            "vendor": "HPE",
            "external_name": "cassandra-csm-side-car",
            "image": "docker-registry.helion.space:443/service-catalog/catalog-service-manager:latest",
            "min_RAM_mb": 512,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": [],
            "affinity": [],
            "labels": [
                "cassandra"
            ],
            "min_instances": 1,
            "max_instances": 1,
            "retry_count": 5,
            "service_ports": [
                {
                    "name": "csm-api",
                    "protocol": "TCP",
                    "source_port": 8081,
                    "target_port": 8081,
                    "public": true
                }
            ],
            "parameters": [
                {
                    "name": "CSM_API_KEY"
                },
                {
                    "name": "CSM_PARAMETERS"
                }
            ]
        }
    ],
    "parameters": [
        {
            "name": "MAX_HEAP_SIZE",
            "description": "Max heap size defined for cassandra",
            "default": "512M",
            "example": "512M",
            "required": true,
            "secret": false
        },
        {
            "name": "HEAP_NEWSIZE",
            "description": "The new HEAP size defined for cassandra",
            "default": "100M",
            "example": "100M",
            "required": true,
            "secret": false
        },
        {
            "name": "CSM_PARAMETERS",
            "description": "Parameters for the csm side-car to use application endpoint",
            "example": "API_KEY",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "CSM_API_KEY",
            "description": "CSM side-car api key",
            "default": "csm-auth-token",
            "example": "csm-auth-token",
            "data_type": "string",
            "required": true,
            "secret": false
        }
    ]
}
