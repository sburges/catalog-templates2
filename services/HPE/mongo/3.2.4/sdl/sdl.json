{
    "name": "mongo",
    "version": "3.2.4",
    "vendor": "HPE",
    "components": [
        {
            "name": "mongo-server",
            "version": "3.2.4",
            "vendor": "mongo",
            "external_name": "mongo",
            "image": "mongo:3.2.4",
            "min_RAM_mb": 256,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": [],
            "affinity": [],
            "labels": [
                "database"
            ],
            "min_instances": 1,
            "max_instances": 1,
            "service_ports": [
                {
                    "name": "http",
                    "protocol": "TCP",
                    "source_port": 27017,
                    "target_port": 27017,
                    "public": true
                }
            ]
        },
        {
            "name": "csm-side-car",
            "version": "1.0",
            "vendor": "HPE",
            "external_name": "mongo-csm-side-car",
            "image": "docker-registry.helion.space:443/service-catalog/catalog-service-manager:latest",
            "min_RAM_mb": 50,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": [],
            "affinity": [],
            "labels": [
                "mongo",
                "database",
                "csm"
            ],
            "min_instances": 1,
            "max_instances": 1,
            "retry_count": 5,
            "service_ports": [
                {
                    "name": "csm-api",
                    "protocol": "TCP",
                    "source_port": 8081,
                    "target_port": 8081,
                    "public": true
                }
            ],
            "parameters": [
                {
                    "name": "CSM_API_KEY"
                }
            ]
        }
    ],
    "parameters": [
        {
            "name": "CSM_API_KEY",
            "description": "CSM side-car api key",
            "default": "csm-auth-token",
            "example": "csm-auth-token",
            "data_type": "string",
            "required": true,
            "secret": false
        }
    ]
}
