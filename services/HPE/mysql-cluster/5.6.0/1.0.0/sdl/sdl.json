    "parameters": [
        {
            "name": "GALERA_CLUSTER",
            "description": "Use Galera Clustering or not",
            "default": "true",
            "example": "true",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "WSREP_CLUSTER_ADDRESS",
            "description": "Address for connecting to the other nodes in the cluster",
            "default": "gcomm://",
            "example": "gcomm://",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "WSREP_SST_USER",
            "description": "Replication user for State Snapshot Transfers between nodes",
            "default": "sst",
            "example": "sst",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "WSREP_SST_PASSWORD",
            "description": "Replication password for State Snapshot Transfers between nodes",
            "example": "sst",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "MYSQL_USER",
            "description": "Normal user for MySQL",
            "default": "mysql",
            "example": "mysql",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "MYSQL_PASSWORD",
            "description": "Password for MySQL normal user",
            "example": "mysql",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "MYSQL_ROOT_PASSWORD",
            "description": "Root password for MySQL",
            "example": "c-krit",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "CSM_API_KEY",
            "description": "CSM side-car api key",
            "default": "csm-auth-token",
            "example": "csm-auth-token",
            "data_type": "string",
            "required": true,
            "secret": false
        }
    ]
