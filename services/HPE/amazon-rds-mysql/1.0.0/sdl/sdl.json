{
    "name": "amazon-rds-mysql",
    "version": "1.0.0",
    "vendor": "HPE",
    "components": [
        {
            "name": "csm-side-car",
            "version": "latest",
            "vendor": "HPE",
            "external_name": "amazon-rds-csm-side-car",
            "image": "docker-registry.helion.space:443/catalog-service-manager/csm-rds-mysql:latest",
            "min_RAM_mb": 50,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": [],
            "labels": [
                "database",
                "mysql",
                "aws",
                "csm"
            ],
            "min_instances": 1,
            "max_instances": 1,
            "service_ports": [
                {
                    "name": "csm",
                    "protocol": "TCP",
                    "source_port": 8081,
                    "target_port": 8081,
                    "public": true
                }
            ],
            "parameters": [
                {
                    "name": "AWS_ACCESS_KEY_ID"
                },
                {
                    "name": "AWS_SECRET_ACCESS_KEY"
                },
                {
                    "name": "AWS_RDS_REGION"
                },
                {
                    "name": "MYSQL_RDS_INSTANCE"
                },
                {
                    "name": "MYSQL_DB_CLASS"
                },
                {
                    "name": "DB_SIZE"
                },
                {
                    "name": "MULTIAZ"
                },
                {
                    "name": "MYSQL_ROOT_USER"
                },
                {
                    "name": "MYSQL_ROOT_PASSWORD"
                },
                {
                    "name": "CSM_API_KEY"
                }
            ]
        }
    ],
    "parameters": [
        {
            "name": "AWS_ACCESS_KEY_ID",
            "description": "AWS access key",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "AWS_SECRET_ACCESS_KEY",
            "description": "AWS secret key",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "AWS_RDS_REGION",
            "description": "AWS region",
            "default": "us-west-2",
            "example": "us-west-2",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "MYSQL_RDS_INSTANCE",
            "description": "MySQL Instance Identifier",
            "example": "dbinstancename",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "MYSQL_DB_CLASS",
            "description": "MySQL DB Instance class",
            "default": "db.t2.micro",
            "example": "db.t2.micro",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "DB_SIZE",
            "description": "Database Allocated Storage",
            "default": "5",
            "example": "5",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "MULTIAZ",
            "description": "Should this be deployed with multiple availibility zones",
            "default": "false",
            "example": "False",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "MYSQL_ROOT_USER",
            "description": "Root Username from the database",
            "example": "root_user",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "MYSQL_ROOT_PASSWORD",
            "description": "MySQL root password",
            "example": "root_passwords",
            "data_type": "string",
            "required": true,
            "secret": false
        },
        {
            "name": "CSM_API_KEY",
            "description": "CSM side-car api key",
            "default": "csm-auth-token",
            "example": "csm-auth-token",
            "data_type": "string",
            "required": true,
            "secret": false
        }
    ]
}
