          "public": false
        }
      ],
      "volume_mounts": [],
      "parameters": [
        {
          "name": "POSTGRES_PASSWORD"
        }
      ]
    },
    {
      "name": "csm-side-car",
      "external_name": "postgres-csm-side-car",
      "workload_type": "container",
      "version": "latest",
      "vendor": "HPE",
      "image": "docker-registry.helion.space:443/catalog-service-manager/csm-dev-postgres:latest",
      "min_RAM_mb": 50,
      "min_disk_gb": 1,
      "min_VCPU": 1,
      "platform": "linux-x86_64",
      "capabilities": [],
      "affinity": [],
      "labels": ["postgres-csm"],
      "min_instances": 1,
      "max_instances": 1,
      "service_ports": [
        {
          "name": "postgres-csm",
          "protocol": "TCP",
          "source_port": 8081,
          "target_port": 8081,
          "public": true
        }
      ],
      "volume_mounts": [],
      "parameters": [
        {
          "name": "POSTGRES_DBNAME"
        },
        {
          "name": "POSTGRES_USER"
        },
        {
          "name": "POSTGRES_PASSWORD"
        },
        {
          "name": "POSTGRES_SSLMODE"
        },
        {
          "name": "CSM_API_KEY"
        }
      ]
    }
  ],
  "parameters": [
    {
      "name": "POSTGRES_USER",
      "description": "Postgres user used by the sidecar",
      "example": "postgres",
      "required": true,
      "secret": false,
      "default": "postgres"
    },
    {
      "name": "POSTGRES_DBNAME",
      "description": "Postgres database name",
      "example": "postgres",
      "required": true,
      "secret": false,
      "default": "postgres"
    },
    {
      "name": "POSTGRES_PASSWORD",
      "description": "Postgres password used by the sidecar",
      "example": "changeme",
      "required": true,
      "secret": false
    },
    {
      "name": "POSTGRES_SSLMODE",
      "description": "Postgres port the sidecar will connect to",
      "example": "disable",
      "required": true,
      "secret": false,
      "default": "disable"
    },
    {
      "name": "CSM_API_KEY",
      "description": "API Key used to authenticate consumers of the sidecar API",
      "example": "my-secret-key",
      "required": true,
      "secret": false
    }
  ]
