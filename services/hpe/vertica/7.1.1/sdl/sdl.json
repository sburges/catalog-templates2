{
    "name": "vertica",
    "version": "7.1.1",
    "vendor": "HPE",
    "volumes": [
        {
            "name": "data-volume",
            "size_gb": 1,
            "filesystem": "ext4",
            "shared": false
        }
    ],
    "components": [
        {
            "name": "vertica-server",
            "version": "7.1.1",
            "vendor": "HPE",
            "external_name": "vertica-server",
            "image": "sumitchawla/vertica",
            "min_RAM_mb": 256,
            "min_disk_gb": 1,
            "min_VCPU": 1,
            "platform": "linux-x86_64",
            "workload_type": "container",
            "capabilities": ["ALL"],
            "affinity": [],
            "labels": ["vertica", "bigdata"],
            "min_instances": 1,
            "max_instances": 1,
            "retry_count": 5,
            "service_ports": [
                {
                    "name": "vsql",
                    "protocol": "TCP",
                    "source_port": 5433,
                    "target_port": 5433,
                    "public": true
                }
            ],
            "volume_mounts": [
                {
                    "volume_name": "data-volume",
                    "mountpoint": "/home/dbadmin/docker"
                }
            ]
        }
    ]
}
